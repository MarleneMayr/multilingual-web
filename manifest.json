{
    "name": "Multilingual Web",
    "version": "1.4",
    "manifest_version": 3,
    "author": "Marlene Mayr",
    "description": "A browser extension to show individual text elements in multiple languages.",
    "icons": {
        "20": "icon_20.png",
        "40": "icon_40.png",
        "128": "icon_128.png"
    },
    "action": {
        "default_icon": {
            "20": "icon_20.png",
            "40": "icon_40.png"
        },
        "default_popup": "popup.html"
    },
    "options_page": "options/options.html",
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/axios.min.js",
                "translation.js"
            ],
            "css": [
                "highlight.css"
            ]
        }
    ]
}